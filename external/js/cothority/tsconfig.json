{
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./",
    "typeRoots": [
      "../types",
      "./node_modules/@types"
    ],
    "paths": {
      "@dedis/kyber": [
        "node_modules/@dedis/kyber/dist",
        "node_modules/@dedis/kyber"
      ],
      "@dedis/kyber/*": [
        "node_modules/@dedis/kyber/dist/*",
        "node_modules/@dedis/kyber/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
